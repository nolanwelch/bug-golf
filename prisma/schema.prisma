generator client {
  provider        = "prisma-client-js"
  output = "../generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TestCase {
  id       Int  @id @default(autoincrement())
  args     Json
  expected Json
  kata     Kata @relation(fields: [kataId], references: [id])
  kataId   Int
}

model Kata {
  id          Int        @id @default(autoincrement())
  date        DateTime?
  starterCode String
  testCases   TestCase[]
  description String?
  createdBy   User       @relation(fields: [userId], references: [id])
  userId      Int
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name String?
  katas Kata[]
}
